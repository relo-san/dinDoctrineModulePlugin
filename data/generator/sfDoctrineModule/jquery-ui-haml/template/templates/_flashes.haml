%div{ :class => 'sf_admin_flashes ui-widget' }
    - if ( $sf_user->hasFlash( 'notice' ) )
        %div{ :class => 'notice ui-state-highlight ui-corner-all' }
            %span{ :class => 'ui-icon ui-icon-info floatleft' }
            = I18n::__( $sf_user->getFlash( 'notice' ) )

    - if ( $sf_user->hasFlash( 'error' ) )
        %div{ :class => 'error ui-state-error ui-corner-all' }
            %span{ :class => 'ui-icon ui-icon-alert floatleft' }
            = I18n::__( $sf_user->getFlash( 'error' ) )

